// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "Existing Docker Compose (Extend)",

	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.dev.yml",
		"docker-compose.yml"
	],

	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "backend",

	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/app",

	// Add the IDs of extensions you want installed when the container is created.
	"customizations": {
		"vscode": {
			"extensions": [
				// Java開発
				"vscjava.vscode-java-pack",           // Java Extension Pack（Java開発の基本セット）

				// Spring Boot開発
				"vmware.vscode-boot-dev-pack",        // Spring Boot Tools

				// コード品質
				"sonarsource.sonarlint-vscode",       // SonarLint（静的解析）
				"redhat.vscode-xml",                  // XML サポート（pom.xml用）
				"redhat.vscode-yaml",                 // YAML サポート（application.yml用）

				// データベース
				"ckolkman.vscode-postgres",           // PostgreSQL クライアント
				"mtxr.sqltools",                      // SQL Tools
				"mtxr.sqltools-driver-pg",            // SQL Tools PostgreSQLドライバー

				// Docker
				"ms-azuretools.vscode-docker",        // Docker サポート

				// ユーティリティ
				"esbenp.prettier-vscode",             // Prettier（コードフォーマッター）
				"editorconfig.editorconfig",          // EditorConfig
				"aaron-bond.better-comments",         // Better Comments（コメント強調）
				"oderwat.indent-rainbow",             // Indent Rainbow（インデント可視化）
				"ms-vscode.live-server",              // Live Server

				// REST API テスト
				"humao.rest-client",                  // REST Client（APIテスト）

				// Markdown
				"yzhang.markdown-all-in-one",         // Markdown All in One
				"davidanson.vscode-markdownlint",     // Markdown Lint

				// AI支援
				"Anthropic.claude-code"
			],
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash",
				"terminal.integrated.shellArgs.linux": ["-l"],

				// Java設定
				"java.configuration.runtimes": [
					{
						"name": "JavaSE-21",
						"path": "/opt/java/openjdk",
						"default": true
					}
				],
				"java.jdt.ls.java.home": "/opt/java/openjdk",
				"java.home": "/opt/java/openjdk",
				"maven.executable.path": "/app/mvnw",
				"java.import.maven.enabled": true,
				"java.autobuild.enabled": true,
				"java.configuration.updateBuildConfiguration": "automatic",

				// Spring Boot設定
				"spring-boot.ls.java.home": "/opt/java/openjdk",
				"spring-boot.ls.checkjvm": false,

				// フォーマッター設定
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"[java]": {
					"editor.defaultFormatter": "redhat.java"
				},

				// ファイル設定
				"files.exclude": {
					"**/.classpath": true,
					"**/.project": true,
					"**/.settings": true,
					"**/.factorypath": true
				},
				"files.watcherExclude": {
					"**/target/**": true
				}
			}
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],

	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	"shutdownAction": "stopCompose",

	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "cat /etc/os-release",

	// Configure tool-specific properties.
	// "customizations": {},

	// Run as tasbal user (matches host UID/GID)
	"remoteUser": "tasbal",

	// Forward ports for backend and debug
	"forwardPorts": [8080, 5005]
}
